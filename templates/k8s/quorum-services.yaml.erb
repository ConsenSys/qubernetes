<%-

def set_node_template_vars(values)
    @Node_UserIdent = values["Node_UserIdent"]
    return
end

# NodePort | ClusterIP | Loadbalancer
# default to NodePort if not set
@Service_Type = "NodePort"
if @config["k8s"] and @config["k8s"]["service"] and  @config["k8s"]["service"]["type"]
 @Service_Type = @config["k8s"]["service"]["type"]
end
-%>

<%- @nodes.each do |node| -%>
<%= set_node_template_vars(node) -%>
---
apiVersion: v1
kind: Service
metadata:
  <%= @Namespace %>
  name: <%= @Node_UserIdent %>
  labels:
    app: qubernetes
    tier: backend
    name: <%= @Node_UserIdent %>
spec:
  selector:
    app: qubernetes
    tier: backend
    name: <%= @Node_UserIdent %>-deployment
  # NodePort | ClusterIP | Loadbalancer
  type: <%= @Service_Type  %>
  ports:
    - name: tm-manager 
      protocol: TCP
      port: <%= @Tm_Port %>
      targetPort: <%= @Tm_Port %>
    # default 8545
    - name: tm-tessera-third-part
      protocol: TCP
      port: <%= @Tm_3Party_Port %>
      targetPort: <%= @Tm_3Party_Port %>
    # default 8545
    - name: rpc-listener
      protocol: TCP
      port: <%= @Node_RPCPort %>
      targetPort: <%= @Node_RPCPort %>
    - name: wsport
      protocol: TCP
      port: <%= @Node_WSPort %>
      targetPort: <%= @Node_WSPort %>
    - name: quorum-listener
      protocol: TCP
      port: <%= @NodeP2P_ListenAddr %>
      targetPort: <%= @NodeP2P_ListenAddr %>
<%- if @config["quorum"]["quorum"]["consensus"] == "raft" -%>
    - name: raft
      protocol: TCP
      targetPort: <%= @Raft_Port %>
      port: <%= @Raft_Port %>
<%- end -%>
<% if @config["prometheus"]  %>
    - name: prometheus
      protocol: TCP
      targetPort: 6060
      port: 6060
<% end %>
<%- end %> <%# end node iteration %>
