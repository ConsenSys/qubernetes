<%-

def set_node_template_vars(values)
    @Node_UserIdent = values["Node_UserIdent"]
    return
end

# NodePort | ClusterIP | Loadbalancer
@Service_Type          = @config["service"]["type"]
-%>

<%- @nodes.each do |node| -%>
<%= set_node_template_vars(node.values.first) -%>
---
apiVersion: v1
kind: Service
metadata:
  <%= @Namespace %>
  name: <%= @Node_UserIdent %>
  labels:
    app: qubernetes
    tier: backend
    name: <%= @Node_UserIdent %>
spec:
  selector:
    app: qubernetes
    tier: backend
    name: <%= @Node_UserIdent %>-deployment
  # NodePort | ClusterIP | Loadbalancer
  type: <%= @config["service"]["type"] %>
  ports:
    - name: tm-manager 
      protocol: TCP
      port: <%= @Tm_Port %>
      targetPort: <%= @Tm_Port %>
    # default 8545
    - name: tm-tessera-third-part
      protocol: TCP
      port: 9080
      targetPort: 9080
    # default 8545
    - name: rpc-listener
      protocol: TCP
      port: <%= @Node_RPCPort %>
      targetPort: <%= @Node_RPCPort %>
    - name: quorum-listener
      protocol: TCP
      port: <%= @NodeP2P_ListenAddr %>
      targetPort: <%= @NodeP2P_ListenAddr %>
    - name: raft
      protocol: TCP
      targetPort: <%= @Raft_Port %>
      port: <%= @Raft_Port %>

<%- end %> <%# end node iteration %>
